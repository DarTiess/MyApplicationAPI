        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Pages.RuNewsTechnoActivity"></activity>
        <activity android:name=".Pages.RuNewsSportActivity" />
        <activity android:name=".Pages.FranceNewsTechnoActivityActivity" />
        <activity android:name=".Pages.FranceNewsSportActivity" />
