        <activity android:name=".Pages.UsNewsSportActivity" />
        <activity android:name=".Pages.FranceNewsActivity" />
        <activity android:name=".Pages.RuNewsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>